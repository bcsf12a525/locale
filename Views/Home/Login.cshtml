@model fyp.Models.Student
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/dist/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/Content/css/blue.css">
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jQuery/jQuery-2.1.4.min.js"></script>
    <script>

        function ajax1() {

            var username = $('#user').val();
            var pass = $('#pass').val();
            var button = $('#btnid').val();


            $.getJSON("/Home/Check_Login?User=" + username + "&Pass=" + pass + "&Btn=" + button, function (data) {

                if (data) {
                    window.location = "/Home/Index";

                }
                else {
                    alert("Username does not exist!!!")
                    $('#user').val ("");
                    $('#pass').val("");
                    $("input[name='btn']").prop("checked", false);

                }

            });
        }

    </script>



    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition login-page">
    @Html.BeginForm("Login1","Home"){ 
    <div class="login-box">
        <div class="login-logo">
            <a href="\Home\Login"><b>e</b>l<b>e</b>ve</a>
        </div><!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Sign in to start your session</p>
            <form class="form-horizontal">
                <div class="form-group has-feedback">
                    @*<input type="text" class="form-control" id="user" name="name" placeholder="Username" aria-describedby="inputSuccess3Status" required="required">*@
                    @Html.TextBoxFor(m => m.Login , new { @class = "form-control", @name = "user", @placeholder = "Enter Username" })
                    @*<span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>*@
                </div>
                <div class="form-group has-feedback">
                    @Html.PasswordFor(m => m.Pass, new { @class = "form-control", @name = "pass", @placeholder = "Enter Password" })
                    @*<input type="password" class="form-control" id="pass" placeholder="Password" required="required">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>*@
                    @*<span id="inputError2Status" class="sr-only">(error)</span>*@
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        @*<div>
                            <label>
                                <input type="radio" name="btn" id="btnid" value="Student"> <span>Student</span> <br>
                            </label>
                            <label>
                                <input type="radio" name="btn" id="btnid" value="Teacher"><span>Teacher</span><br>
                            </label>
                        </div>*@
                    </div><!-- /.col -->
                    <div class="col-xs-4">
                        <input type="submit" class="btn btn-primary btn-block btn-flat" >Sign In</input>
                    </div><!-- /.col -->
                </div>
            </form>
            <div class="social-auth-links text-center">
                <p>- OR -</p>
                <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Sign in using Facebook</a>
                <a href="#" class="btn btn-block btn-social btn-google btn-flat"><i class="fa fa-google-plus"></i> Sign in using Google+</a>
            </div><!-- /.social-auth-links -->
            <a href="\Home\Register" class="text-center">Register a new membership</a>
        </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->
    }
    <!-- jQuery 2.1.4 -->
    <script src="~/Scripts/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- Bootstrap 3.3.5 -->
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Scripts/icheck.min.js"></script>
    <script>
      $(function () {
        $('input').iCheck({
          checkboxClass: 'icheckbox_square-blue',
          radioClass: 'iradio_square-blue',
          increaseArea: '20%' // optional
        });
      });
    </script>
</body>
</html>
